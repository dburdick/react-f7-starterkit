@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea 
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)
  
body
  color: $black
  font-size: 1em
  line-height: 1.5
  
header
  background: $grey
  color:$black
  padding: 1em
  
  nav
    float:right
    user-select:none
    
  .nav-item
    float:left
    margin-left:.5em
    
    a.active
      text-decoration:underline
    
.content
  padding: 1em

.RouteTransition-enter {
  opacity: 0.01;
  -webkit-transition: opacity 1150ms ease-in;
  transition: opacity 1150ms ease-in;
}

.RouteTransition-enter.RouteTransition-enter-active {
  opacity: 1;
}

.RouteTransition-leave {
  opacity: 1;
  -webkit-transition: opacity 1150ms ease-in;
  transition: opacity 1150ms ease-in;
}

.RouteTransition-leave.RouteTransition-leave-active {
  opacity: 0.01;
}




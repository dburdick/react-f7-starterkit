.example-enter & {
  opacity: 0.9;
  -webkit-transform: translate3d(-100%, 0, 0);
}
.example-enter.example-enter-active & {
  opacity: 1;
  -webkit-transform: translate3d(0, 0, 0);
  transition-duration: 500ms;
}
.example-leave & {
  opacity: 1;
  -webkit-transform: translate3d(0, 0, 0);
}

.example-leave.example-leave-active & {
  opacity: 0.9;
  -webkit-transform: translate3d(100%, 0, 0);
  transition-duration: 500ms;
}

